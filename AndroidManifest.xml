<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asgj.android.appusage"
    android:versionCode="1"
    android:versionName="1.0" >

     <uses-permission android:name="android.permission.GET_TASKS"/>
     <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"/>
     <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:name="com.asgj.android.appusage.SmartPhoneAppUsage"
        android:icon="@drawable/usage_launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/applicationTheme">
        <activity
            android:name="com.asgj.android.appusage.activities.UsageListMainActivity"
            android:icon="@drawable/usage_launcher_icon"
            android:theme="@style/applicationTheme" >
           
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.asgj.android.appusage.activities.SettingActivity"
            android:label="@string/string_settings"
			android:configChanges="layoutDirection|screenSize|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name="com.asgj.android.appusage.service.UsageTrackingService"
            android:label="@string/app_name" >
        </service>

        <receiver
            android:name="screenWakeUp"
            android:label="@string/screen_wake_up" >
        </receiver>
         
        <receiver
            android:name="screenDim"
            android:label="@string/screen_dim" >
        </receiver>
         
        <receiver
             android:name="userPresent"
             android:label="@string/screen_user_present">
        </receiver>
        <receiver
            android:name="com.asgj.android.appusage.receivers.DeviceRebootReceiver"
            android:enabled="true">
            <intent-filter >
                <action android:name="android.intent.action.ACTION_SHUTDOWN"/>
                <action android:name="android.intent.action.REBOOT"/>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.asgj.android.appusage.receivers.AutoTrackReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.asgj.android.appusage.action.AUTO_TRACK" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
