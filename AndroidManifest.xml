<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asgj.android.appusage"
    android:versionCode="1"
    android:versionName="1.0" >

     <uses-permission android:name="android.permission.GET_TASKS"/>
     <uses-permission 
         android:name="android.permission.PACKAGE_USAGE_STATS"/>
     <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
     <uses-permission android:name="android.permission.READ_CALL_LOG"/>
       
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.asgj.android.appusage.activities.UsageListMainActivity"
            android:label="@string/app_name" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="asgj.intent.action.PUBLISH_RESULTS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
        
        <service
            android:name="com.asgj.android.appusage.service.UsageTrackingService"
            android:label="@string/app_name" >
        </service>
        
        
        <BroadcastReceiver
            android:name="screenWakeUp"
            android:label="@string/app_name" >
         </BroadcastReceiver>
         
        <BroadcastReceiver
            android:name="screenDim"
            android:label="@string/app_name" >
         </BroadcastReceiver>
    </application>

</manifest>
