<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.asgj.android.appusage.activities.UsageListMainActivity" >

    <FrameLayout
        android:id="@+id/usage_list_main_fragment"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="5" >
    </FrameLayout>
    
    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/color_action_bar_background" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="7" >
    <LinearLayout 
        android:id="@+id/usage_tab_height_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_action_bar_background"/>
    <FrameLayout
        android:id="@+id/usage_detail_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/showByOptionsToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@drawable/holo_blue_ripple"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/showByOptionsWeekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@drawable/holo_blue_ripple"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/string_Weekly"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/showByOptionsMonthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@drawable/holo_blue_ripple"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/string_Monthly"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/showByOptionsYearly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@drawable/holo_blue_ripple"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/string_Yearly"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/showByOptionsCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@drawable/holo_blue_ripple"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/string_Custom"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:visibility="invisible" />
    </FrameLayout>
	</LinearLayout>
</LinearLayout>