<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sj.android.appusage.activities.UsageListMainActivity" >
    
      <FrameLayout
          android:id="@+id/usage_list_main_fragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" >
          <TextView
              android:id="@+id/showByOptionsToday"
              android:layout_width="wrap_content"
              android:minWidth="@dimen/activity_show_by_textview_width"
              android:textSize="15dp"
              android:padding="5dp"
              android:visibility="invisible"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:textColor="@android:color/white"
              android:background="@drawable/holo_blue_ripple"
              android:layout_gravity="bottom|right" />
          
           <TextView
              android:id="@+id/showByOptionsWeekly"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="@dimen/activity_show_by_textview_width"
              android:visibility="invisible"
              android:textSize="15dp"
              android:padding="5dp"
              android:gravity="center"
              android:text="@string/string_Weekly"
              android:textColor="@android:color/white"
              android:background="@drawable/holo_blue_ripple"
              android:layout_gravity="bottom|right" />
           
            <TextView
              android:id="@+id/showByOptionsMonthly"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="@dimen/activity_show_by_textview_width"
              android:visibility="invisible"
              android:textSize="15dp"
              android:gravity="center"
              android:padding="5dp"
              android:text="@string/string_Monthly"
              android:textColor="@android:color/white"
              android:background="@drawable/holo_blue_ripple"
              android:layout_gravity="bottom|right" />
            
             <TextView
              android:id="@+id/showByOptionsYearly"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="@dimen/activity_show_by_textview_width"
              android:visibility="invisible"
              android:textSize="15dp"
              android:gravity="center"
              android:padding="5dp"
              android:text="@string/string_Yearly"
              android:textColor="@android:color/white"
              android:background="@drawable/holo_blue_ripple"
              android:layout_gravity="bottom|right" />
             
              <TextView
              android:id="@+id/showByOptionsCustom"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="@dimen/activity_show_by_textview_width"
              android:visibility="invisible"
              android:textSize="15dp"
              android:padding="5dp"
              android:gravity="center"
              android:text="@string/string_Custom"
              android:textColor="@android:color/white"
              android:background="@drawable/holo_blue_ripple"
              android:layout_gravity="bottom|right" />

          </FrameLayout>
    
    
</LinearLayout>
